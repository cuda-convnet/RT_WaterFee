                //window打开时调用，初始化form内容
                if (content) {
                    //content.doInit(win);
                }
            }
        });
    }

    //导出Excel数据
    var exportCondition;
    function ShowExport() {
        var url = "/AddressGroup/Export";
        $.ajax({
            type: "POST",
            url: url,
            data: exportCondition,
            success: function (filePath) {
                var downUrl = '/FileUpload/DownloadFile?file=' + filePath;
                window.location = downUrl;
            }
        });
    }
</script>

