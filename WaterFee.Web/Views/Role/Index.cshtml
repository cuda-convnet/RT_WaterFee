@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>企业信息化平台管理系统</title>
    @using System.Web.Optimization;
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquerytools")
    @Styles.Render("~/Content/jquerytools")

    <!--常用的一些组件业务脚本函数,放置此处方便脚本提示-->
    <script src="~/Scripts/ComponentUtil.js"></script>

    <script type="text/javascript">	
        //初始角色分类：系统角色、业务角色、应用角色...
        function initRoleCategorys() {
            $('#txtCategory').combobox({
                url: '/Role/GetRoleCategorys',
                valueField: 'Value',
                textField: 'Text',                
            });
        }

        //初始化公司
        function initCompany() {
            $('#txtCompany_ID').combotree({
                url: '/User/GetMyDeptTreeJson_Server?iDeleted=0',
                required: true,
                onClick: function (node) {
                    //
                }
            });
        }

        //根据用户角色初始化功能树
        function initTreeFunction() {
            $("#loading").show();

            $('#treeFunctionView').tree({
                checkbox: true,
                cascadeCheck: false,
              //  url: '/Function/GetRoleFunctionByUser?userId=@Session["UserId"]',
                url: '/Menu/GetMenuTreeJson',
                onClick: function (node) {
                    //
                }
            });

            var id = $("#txtID").val();
            initRoleFunction(id);

            $("#loading").fadeOut(500);
        }

        function initRoleFunction(id) {
            if (id != "") {
                //全部操作功能取消勾选
                var treeMenu = "treeFunctionView";
                unCheckTree(treeMenu);
                //勾选指定内容
                $.getJSON("/Function/GetFunctions?r=" + Math.random() + "&roleid=" + id, function (json) {
                    $.each(json, function (i, item) {
                        var node = $('#' + treeMenu).tree('find', item.ID);//查找节点
                        if (node) {
                            $('#' + treeMenu).tree('check', node.target);//将得到的节点选中
                        }
                    });
                });
            }
        }

        //保存角色操作功能
        function saveRoleFunction() {
            var functionList = new Array();
            var nodes = $('#treeFunctionView').tree('getChecked');
            for (var i = 0; i < nodes.length; i++) {
                if (nodes[i].iconCls != "icon-organ") {
                    functionList.push(nodes[i].id);
                }
            }

            var url = '/Role/EditFunctions?r=' + Math.random();
            var roleId = $('#txtID').val();

            $.ajax({
                type: 'POST',
                url: url,
                async: false,
                data: { roleId: roleId, newList: functionList.join(',')},
                success: function (result) {
                    showTips("操作成功！ ");
                },
                error: function (xhr, status, error) {
                    showError("操作失败"); //xhr.responseText
                }
            });
        }

        //初始化角色列表
        function initRoleTree() {
            $("#loading").show();

            $('#treeRole').tree({
                url: '/Role/GetMyRoleTreeJson?userId=@Session["UserId"]',
                onClick: function (node) {
                    var id = node.id;
                    var dept = "dept";
                    var role = "role";
                    if (id.indexOf(dept) == 0) {
                        var newid = id.substring(dept.length, id.length);
                        //loadDataByOu(newid);
                    }
                    else if (id.indexOf(role) == 0) {
                        var newid = id.substring(role.length, id.length);
                        loadData(newid);
                    }
                }
            });

            $("#loading").fadeOut(500);
        }

        //初始化角色可操作的数据（组织机构）
        function initRoleDataView() {
            $("#loading").show();

            //先初始化所有部门
            $('#treeDataView').tree({
                checkbox: true,
                cascadeCheck: false,
                url: '/User/GetMyDeptTreeJson?userId=@Session["UserId"]',
                onClick: function (node) {
                    //
                }
            });

            var id = $("#txtID").val();
            if (id != "") {
                initRoleData(id);
            }

            $("#loading").fadeOut(500);
        }

        function initRoleData(id) {
            if (id != "") {
                //角色包含的数据权限（组织机构）
                var treeMenu = "treeDataView";
                unCheckTree(treeMenu);
                //勾选指定内容
                $.getJSON("/RoleData/GetRoleDataList?r=" + Math.random() + "&roleId=" + id, function (json) {
                    $.each(json, function (i, item) {
                        var node = $('#' + treeMenu).tree('find', item);//查找节点
                        if (node) {
                            $('#' + treeMenu).tree('check', node.target);//将得到的节点选中
                        }
                    });
                });
            }
        }

        //供弹出窗口关闭后刷新关系
        function reloadRelation() {
            var id = $("#txtID").val();
            loadData(id);
        }

        //加载制定的对象数据
        function loadData(id) {
            $("#loading").show();
            //$.ajaxSettings.async = false;
            $.getJSON("/Role/FindById?r=" + Math.random() + "&id=" + id, function (info) {
                $("#txtID").val(info.ID);
                $("#txtName").val(info.Name);
                $("#txtNote").val(info.Note);
                $("#txtHandNo").val(info.HandNo);
                $("#txtSortCode").val(info.SortCode);

                $("#txtCategory").combobox("setValue", info.Category);
                $('#txtCompany_ID').combotree('setValue', info.Company_ID);
            });

            initRoleFunction(id);
            initRoleData(id);

            //刷新角色的组织机构和用户列表
            initRoleOus(id);
            initRoleUsers(id);

            $("#loading").fadeOut(500);
        }

        //刷新角色的组织机构列表
        function initRoleOus(id) {
            $('#lbxOUs').empty();
            $.getJSON("/OU/GetOusByRole?r=" + Math.random() + "&roleid=" + id, function (json) {
                $.each(json, function (i, item) {
                    $('#lbxOUs').append('<option value="' + item.ID + '">' + item.Name + '</option>');
                });
            });
        }

        //初始化角色的用户
        function initRoleUsers(id) {
            $('#lbxUsers').empty();
            $.getJSON("/User/GetUsersByRole?r=" + Math.random() + "&roleid=" + id, function (json) {
                $.each(json, function (i, item) {
                    $('#lbxUsers').append('<option value="' + item.ID + '">' + item.FullName + '</option>');
                });
            });
        }

        //保存对象数据
        function saveData() {
            if ($("#txtName").val() == "") {
                $("#txtName").focus();
                $.messager.alert("提示", "角色名称不能为空"); return;
            }

            var url = '/Role/Insert?r=' + Math.random();
            var id = $("#txtID").val();
            if (id != "") {
                url = '/Role/Update?id=' + id;
            }

            var postData = $("#ffAdd").serializeArray();
            $.post(url, postData, function (json) {
                var data = $.parseJSON(json);
                if (data.Success) {
                    showTips("操作成功");
                    initRoleTree();
                }
                else {
                    showError("操作失败:" + data.ErrorMessage);
                }
            }).error(function () {
                $.messager.alert("提示", "您未被授权使用该功能，请重新登录测试或联系管理员进行处理。", 'warning');
            });
        }

        //新增清空控件
        function addData() {
            $("input[type=text][id*='txt']").val("");
            $("textarea[id*='txt']").empty();
            $("select[id*='lbx']").empty();
        }

        //删除当前记录
        function delData() {
            if ($("#txtID").val() == "") {
                $.messager.alert("提示", "请选择记录");
                return;
            }

            $.messager.confirm("删除确认信息", "您要确定删除该条记录吗？", function (action) {
                if (action) {
                    $.ajax({
                        type: 'POST',
                        url: '/Role/Delete?r=' + Math.random(),
                        dataType: 'json',
                        data: { ID: $("#txtID").val() },
                        success: function (data) {
                            if (data.Success) {
                                showTips("操作成功");
                                initRoleTree();
                            }
                            else {
                                showError("操作失败：" + data.ErrorMessage, 3000);
                            }
                        }
                    });
                }
            });
        }

        function deleteUser() {
            var removeList = new Array();
            $('#lbxUsers option:selected').each(function (i, selected) {
                removeList[i] = $(selected).val();
            });

            var url = '/Role/EditUserRelation?r=' + Math.random();
            removeAction(url, removeList);
        }

        function deleteOU() {
            var removeList = new Array();
            $('#lbxOUs option:selected').each(function (i, selected) {
                removeList[i] = $(selected).val();
            });

            var url = '/Role/EditOuRelation?r=' + Math.random();
            removeAction(url, removeList);
        }

        //通用保存关系操作
        function removeAction(url, removeList) {
            $.ajax({
                type: 'POST',
                url: url,
                async: false,
                data: { roleId: $("#txtID").val(), addList: '', removeList: removeList.join(',') },
                success: function (id) {
                    showTips("操作成功！ ");
                },
                error: function (xhr, status, error) {
                    showError("操作失败"); //xhr.responseText
                }
            });

            reloadRelation();
        }

        //对象居中的函数，调用例子：$("#loading").center();
        jQuery.fn.center = function () {
            this.css("position", "absolute");
            this.css("top", Math.max(0, (($(window).height() - this.outerHeight()) / 2) +
                                                $(window).scrollTop()) + "px");
            this.css("left", Math.max(0, (($(window).width() - this.outerWidth()) / 2) +
                                                $(window).scrollLeft()) + "px");
            return this;
        }

        //初始化对象
        $(document).ready(function () {
            //初始化角色分类
            initRoleCategorys();
            //初始化公司列表
            initCompany();

            //初始化当前角色所能分配的功能
            initTreeFunction();
            $("#roleExpand").bind("click", function () {
                expandAll("treeRole");
            });
            $("#roleCollapse").bind("click", function () {
                collapseAll("treeRole");
            });

            //初始化角色包含的数据（组织机构）
            initRoleDataView();
            $("#roleDataExpand").bind("click", function () {
                expandAll("treeDataView");
            });
            $("#roleDataCollapse").bind("click", function () {
                collapseAll("treeDataView");
            });

            //初始化角色树
            initRoleTree();
            $("#functionExpand").bind("click", function () {
                expandAll("treeFunctionView");
            });
            $("#functionCollapse").bind("click", function () {
                collapseAll("treeFunctionView");
            });
            //编辑相关关系
            reloadEditTree();

            //角色包含机构的树刷新
            $("#roleDeptExpand").bind("click", function () {
                expandAll("treeRoleDeptView");
            });
            $("#roleDeptCollapse").bind("click", function () {
                collapseAll("treeRoleDeptView");
            });

            $("#loading").center(); //loading的图片显示居中
        });

        function saveRoleData() {
            var companyList = new Array();
            var deptList = new Array();
            var nodes = $('#treeDataView').tree('getChecked');
            for (var i = 0; i < nodes.length; i++) {
                if (nodes[i].iconCls == "icon-organ") {//公司节点
                    companyList.push(nodes[i].id);
                }
                else {
                    deptList.push(nodes[i].id);
                }
            }

            var url = '/RoleData/UpdateRoleData?r=' + Math.random();
            var roleId = $('#txtID').val();

            $.ajax({
                type: 'POST',
                url: url,
                async: false,
                data: { roleId: roleId, belongCompanys: companyList.join(','), belongDepts: deptList.join(',')},
                success: function (result) {
                    showTips("操作成功！ ");
                    $("#DivEditOU").dialog('close');

                    //刷新角色机构列表
                    initRoleOus(roleId);
                },
                error: function (xhr, status, error) {
                    showError("操作失败"); //xhr.responseText
                }
            });
        }

		//-->
    </script>

    <script type="text/javascript">
            //弹出修改机构的对话框
            function ShowEditOUTree() {
                if ($("#txtID").val() == "") {
                    $.messager.alert("提示", "请选择记录");
                    return;
                }

                //初始化角色包含的组织机构
                initEditRoleDeptView();

                $("#DivEditOU").dialog('open').dialog('setTitle', '角色包含的机构');
            }

            //初始化角色包含的组织机构
            function initEditRoleDeptView() {
                $("#loading").show();

                //先初始化所有部门
                $('#treeRoleDeptView').tree({
                    checkbox: true,
                    cascadeCheck: false,
                    url: '/User/GetMyDeptTreeJson?userId=@Session["UserId"]',
                    onClick: function (node) {
                        //
                    }
                });

                var id = $('#txtID').val();
                if (id != "") {
                    //设置角色包含的部门（勾选的）
                    var treeMenu = "treeRoleDeptView";
                    //unCheckTree(treeMenu);

                    //勾选指定内容
                    $.getJSON("/OU/GetOUsByRole?r=" + Math.random() + "&roleid=" + id, function (json) {
                        $.each(json, function (i, item) {
                            var node = $('#' + treeMenu).tree('find', item.ID);//查找节点
                            if (node != null && node != 'undefined') {
                                $('#' + treeMenu).tree('check', node.target);//将得到的节点选中
                            }
                        });
                    });
                }

                $("#loading").fadeOut(500);
            }


            //保存角色的组织机构
            function saveRoleDept() {
                var url = '/Role/EditOUs?r=' + Math.random();
                var roleId = $('#txtID').val();
                var newList = new Array();

                var nodes = $('#treeRoleDeptView').tree('getChecked');
                for (var i = 0; i < nodes.length; i++) {
                    newList.push(nodes[i].id);
                }

                $.ajax({
                    type: 'POST',
                    url: url,
                    async: false,
                    data: { roleId: roleId, newList: newList.join(',') },
                    success: function (result) {
                        showTips("操作成功！ ");
                        $("#DivEditOU").dialog('close');

                        //刷新角色机构列表
                        initRoleOus(roleId);
                    },
                    error: function (xhr, status, error) {
                        showError("操作失败"); //xhr.responseText
                    }
                });
            }
    </script>

    <script type="text/javascript">
            //初始化组织机构列表
            function initEditDeptTreeview() {
                $("#loading").show();

                $('#editTreeDept').tree({
                    url: '/User/GetMyDeptTreeJson?userId=@Session["UserId"]',
                    onClick: function (node) {
                        loadDataByOu(node.id);
                    }
                });

                $("#loading").fadeOut(500);
            }

            //初始化角色列表
            function initEditRoleTree() {
                $("#loading").show();

                $('#editTreeRole').tree({
                    url: '/Role/GetMyRoleTreeJson?userId=@Session["UserId"]',
                    onClick: function (node) {
                        var id = node.id;
                        var dept = "dept";
                        var role = "role";
                        if (id.indexOf(dept) == 0) {
                            var newid = id.substring(dept.length, id.length);
                            loadDataByOu(newid);
                        }
                        else if (id.indexOf(role) == 0) {
                            var newid = id.substring(role.length, id.length);
                            loadDataByRole(newid);
                        }
                    }
                });

                $("#loading").fadeOut(500);
            }

            //根据机构加载指定列表
            function loadDataByOu(id) {
                $("#loading").show();

                //赋值给特殊字段，公司和部门查询的时候选择其中一个
                var queryParams = $('#grid').datagrid('options').queryParams;
                queryParams.Role_ID = ""; //必须清空
                queryParams.Dept_ID = id; //设置值

                $("#grid").datagrid("reload");
                $('#grid').datagrid('uncheckAll');

                $("#loading").fadeOut(500);
            }

            //根据角色加载列表
            function loadDataByRole(id) {
                $("#loading").show();

                //赋值给特殊字段，公司和部门查询的时候选择其中一个
                var queryParams = $('#grid').datagrid('options').queryParams;
                queryParams.Role_ID = id; //设置值
                queryParams.Dept_ID = ""; //设置空值

                $("#grid").datagrid("reload");
                $('#grid').datagrid('uncheckAll');

                $("#loading").fadeOut(500);
            }

            //清空标签并加上已选择用户的信息
            function reloadEditTree() {
                $("#loading").show();

                var roleid = $('#txtID').val();
                if (roleid != "") {

                    cleareChoise();//清空标签
                    var url = "/User/GetUsersByRole?r=" + Math.random() + "&roleid=" + roleid;
                    $.ajaxSettings.async = false;
                    $.getJSON(url, function (json) {

                        $.each(json, function (i, item) {
                            var id = item.ID;
                            var fullName = item.FullName;
                            addUser(id, fullName);  //加上已选择用户的信息
                        });
                    });
                }

                $("#loading").fadeOut(500);
            }

            //弹出修改的对话框
            function ShowEditTree() {
                if ($("#txtID").val() == "") {
                    $.messager.alert("提示", "请选择记录");
                    return;
                }

                reloadEditTree();//清空标签并加上已选择用户的信息
                initEditDeptTreeview();
                initEditRoleTree();

                var queryData = {
                @if(Session["IsSuperAdmin"] == null || (bool)Session["IsSuperAdmin"] == false) {
                    @Html.Raw("WHC_Company_ID:"+ Session["Company_ID"]);
                }
                };//可添加一些预设条件
                InitGrid(queryData);//初始化Datagrid表格数据

                $("#DivEditUser").dialog('open').dialog('setTitle', '角色包含的用户');
            }

            //实现对DataGird控件的绑定操作
            function InitGrid(queryData) {
                $('#grid').datagrid({   //定位到Table标签，Table标签的ID是grid
                    url: '/User/FindWithPager',   //指向后台的Action来获取当前用户的信息的Json格式的数据
                    title: '系统用户信息',
                    iconCls: 'icon-view',
                    fit: true,
                    height: 500,
                    //width: function () { return document.body.clientWidth * 0.9 },//自动宽度
                    nowrap: true,
                    autoRowHeight: false,
                    striped: true,
                    collapsible: true,
                    pagination: true,
                    pageSize: 15,
                    pageList: [15, 30],
                    rownumbers: true,
                    //sortName: 'ID',    //根据某个字段给easyUI排序
                    sortOrder: 'asc',
                    remoteSort: false,
                    idField: 'ID',
                    queryParams: queryData,  //异步查询的参数
                    columns: [[
                        { field: 'ck', checkbox: true },   //选择
                         { title: 'ID', field: 'ID', width: 80, sortable: true },
                         { title: '用户编码', field: 'HandNo', width: 80, sortable: true },
                         { title: '用户名/登录名', field: 'Name', width: 80, sortable: true },
                         { title: '真实姓名', field: 'FullName', width: 80, sortable: true },
                         {
                             title: '是否过期', field: 'IsExpire', width: 80, formatter: function (val, rowdata, index) {
                                 if (val) {
                                     return '<a class="grid_unvisible" href="javascript:void(0)" >' + val + '</a>';
                                 } else {
                                     return '<a class="grid_visible" href="javascript:void(0)" >' + val + '</a>';
                                 }
                             }
                         },
                         { title: '职务头衔', field: 'Title', width: 80, sortable: true },
                         { title: '移动电话', field: 'MobilePhone', width: 80, sortable: true },
                         { title: '办公电话', field: 'OfficePhone', width: 80, sortable: true },
                         { title: '邮件地址', field: 'Email', width: 80, sortable: true },
                         { title: '性别', field: 'Gender', width: 80, sortable: true },
                         { title: 'QQ号码', field: 'QQ', width: 80, sortable: true },
                         { title: '备注', field: 'Note', width: 80, sortable: true }
                    ]],
                    onLoadSuccess: function () {
                        $(".grid_visible").linkbutton({ text: '可用', plain: true, iconCls: 'icon-ok' });
                        $(".grid_unvisible").linkbutton({ text: '过期', plain: true, iconCls: 'icon-stop' });
                    },
                    toolbar: [{
                        id: 'btnAddChoise',
                        text: '添加选择',
                        iconCls: 'icon-add',
                        handler: function () {
                            addChoise();//实现添加记录
                        },
                    }, '-', {
                        id: 'btnComplete',
                        text: '完成选择',
                        iconCls: 'icon-ok',
                        handler: function () {
                            completeChoise();//完成选择并返回
                        }
                    }, '-', {
                        id: 'btnCleare',
                        text: '清空',
                        iconCls: 'icon-remove',
                        handler: function () {
                            cleareChoise();//清空用户选择记录
                        }
                    }, '-', {
                        id: 'btnReload',
                        text: '刷新',
                        iconCls: 'icon-reload',
                        handler: function () {
                            //实现刷新栏目中的数据
                            $("#grid").datagrid("reload");
                        }
                    }],
                    onDblClickRow: function (rowIndex, rowData) {
                        $('#grid').datagrid('uncheckAll');
                        $('#grid').datagrid('checkRow', rowIndex);
                    }
                });
            };

            //实现添加记录
            function addChoise() {
                var rows = $("#grid").datagrid("getSelections");
                //首先取出来值判断用户只能选择一个
                if (rows.length == 0) {
                    $.messager.alert("提示", "请选择一条记录", "error");
                    return;
                }

                for (var i = 0; i < rows.length; i++) {
                    var id = rows[i].ID;
                    var fullname = rows[i].FullName;
                    addUser(id, fullname);
                }
                $('#grid').datagrid('uncheckAll');
            }

            //完成选择并返回
            function completeChoise() {
                var roleId = $('#txtID').val();
                if (roleId != "") {
                    var url = '/Role/EditUsers?r=' + Math.random();
                    saveAction(url, roleId, addUserList);
                }

                $("#DivEditUser").dialog('close');

                initRoleUsers(roleId);//重新刷新
            }

            //保存机构用户操作
            function saveAction(url, id, newList) {
                $.ajax({
                    type: 'POST',
                    url: url,
                    async: false,
                    data: { roleId: id, newList: newList.join(',') },
                    success: function (result) {
                        showTips("操作成功！ ");
                        $('#DivEditUser').dialog('close');
                        reloadRelation();
                    },
                    error: function (xhr, status, error) {
                        showError("操作失败"); //xhr.responseText
                    }
                });
            }

            //清空用户选择记录
            function cleareChoise() {
                $('#tags').importTags('');
                addUserList = new Array();
                addNameList = new Array();
            }
    </script>
    <script type="text/javascript">
        $(function () {
            $('#tags').tagsInput({
                width: 'auto',
                height: '100px',
                onRemoveTag: function (tag) {
                    var i = addNameList.indexOf(tag);
                    var id = addUserList[i];
                    removeUser(id, tag);
                },
                interactive: false
            });
        });

        var addUserList = new Array();
        var addNameList = new Array();
        function addUser(id, name) {
            if ($.inArray(id, addUserList) == -1) {
                addUserList.push(id);
                addNameList.push(name);
                $('#tags').addTag(name);
            }
        }
