
<!DOCTYPE html>
<html>
<head>
    <title>计算发行费用</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @using System.Web.Optimization;
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquerytools")
    @Styles.Render("~/Content/jquerytools")

    <style>
        table.view {
            border: 1px solid #A8CFEB;
            border-collapse: collapse;
            margin-bottom: 5px;
            vertical-align: top;
            height: 98%;
            width: 98%;
            font-size: 16px;
        }

        .view th {
            padding-left: 10px;
            padding-right: 5px;
            padding-top: 5px;
            padding-bottom: 5px;
            height: 23px;
            width: 150px;
            border: 1px solid silver;
            background-color: #F1F6FF;
            font-size: 16px;
            height: 35px;
            line-height: 33px;
        }

        .view td {
            padding-left: 10px;
            padding-right: 5px;
            padding-top: 5px;
            padding-bottom: 5px;
            height: 23px;
            width: 150px;
            border: 1px solid silver;
            background-color: #FAFCFF;
            font-size: 16px;
            height: 35px;
            line-height: 33px;
        }

        .view input {
            width: 99%;
        }

        #btnAddOK span {
            line-height: 33px;
        }
        #btnEditOK span {
            line-height: 33px;
        }
    </style>

    <!--常用的一些组件业务脚本函数,放置此处方便脚本提示-->
    <script src="~/Scripts/ComponentUtil.js"></script>
    <script src="~/Scripts/dbjs.js"></script>

    <script type="text/javascript">

        $(function () {
            $(document).keydown(function (event) {
                if (event.keyCode == 13) {
                    $("#btnSearch").click();
                    return;
                }
            });
            BindSearchEvent();
        });
 
        //绑定搜索按钮的的点击事件
        function BindSearchEvent() {
            //按条件进行查询数据，首先我们得到数据的值
            $("#btnSearch").click(function () {
                var intCustNo = $("#txtIntNo").val();
                if (intCustNo == "") {
                    showError("请输入客户编号!", 1000);
                    return;
                }
                $.messager.progress({
                    //title: '温馨提示',
                    text: '正在处理中,请稍后......'
                });
                $.ajax({
                    url: '/CountFee/CountReleaseFee?intCustNo='+intCustNo,
                    type: 'post',
                    dataType: 'json', 
                    //async: false,
                    success: function (json) {
                        console.log(json);
                        $.messager.progress('close');
                        if (json.Success) {
                            $.messager.alert("温馨提示", "操作成功!");
                            reloadGrid();
                        }
                        else {
                            $.messager.alert("温馨提示", json.ErrorMessage);
                        }
                    },
                    error: function () {
                        showError("网络错误!");
                        $.messager.progress('close');
                    }
                });
            });
             
        }


    </script>


</head>
<body>

    <div id="loading" style="display: none;"><img alt="数据正在加载中..." src="~/Content/images/loading02.gif" /></div>
    <div class="easyui-layout" style="width:700px;height:700px;" fit="true">

        <div id="tb" data-options="region:'center',title:'',iconCls:'icon-book'" style="padding:5px;height:auto">
            <!-------------------------------搜索框----------------------------------->
            <fieldset>
                <legend>信息查询</legend>
                <div id="ffSearch" method="post">
                    <div id="toolbar">
                        <table cellspacing="0" cellpadding="0">
                            <tr>
                                <th style='padding:3px;'><label for="txtIntNo">客户编号：</label></th>
                                <td style='padding:3px;'><input type="text" id="txtIntNo" class="text-info" style="width:100px" /></td>
                                <td style='padding:3px;text-align:right'>
                                    <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'" id="btnSearch">生成账单</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </fieldset>

            
        </div>
    </div>

     
</body>
</html>
