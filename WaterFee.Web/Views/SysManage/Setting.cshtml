<!DOCTYPE html>
<html>
<head>
    <title>参数设置</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @using System.Web.Optimization;
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquerytools")
    @Styles.Render("~/Content/jquerytools")

    <!--常用的一些组件业务脚本函数,放置此处方便脚本提示-->
    <script src="~/Scripts/ComponentUtil.js"></script>
    <script src="~/Scripts/dbjs.js"></script>
    <style>
        table.view {
            text-align: center;
            border: 1px solid #A8CFEB;
            border-collapse: collapse;
            margin-bottom: 5px;
            vertical-align: top;
            width: 98%;
        }

        .view th {
            padding-left: 10px;
            padding-right: 5px;
            padding-top: 5px;
            padding-bottom: 5px;
            height: 23px;
            width: 150px;
            border: 1px solid silver;
            background-color: #F1F6FF;
        }

        .view td {
            padding-left: 10px;
            padding-right: 5px;
            padding-top: 5px;
            padding-bottom: 5px;
            height: 23px;
            width: 150px;
            border: 1px solid silver;
            background-color: #FAFCFF;
        }

        .view input {
            width: 99%;
        }

        .subtotal {
            font-weight: bold;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            $("#ddlPayMode").combobox('setValue',@ViewBag.PayMode);
            //$("#txtBalanceDay").numberbox('setValue',@ViewBag.BalanceDay);
            //$("#txtAreaCode").numberbox('setValue',@ViewBag.AreaCode);

            $("#btnSave").click(function(){
                var payMode=$("#ddlPayMode").combobox('getValue');
                var balanceDay=parseInt( $("#txtBalanceDay").val());
                if(balanceDay<1||balanceDay>28){
                    showError("结算日请填写1-28中的任意一天.");
                    return;
                }
                var AreaCode=$("#txtAreaCode").val();
                $.ajax({
                    url:'/SysManage/Setting_Save',
                    type:'post',
                    dataType:'json',
                    data:{PayMode:payMode,BalanceDay:balanceDay,AreaCode:AreaCode },
                    success:function(ret){
                        if(ret.Success) showTips("保存成功!");
                        else showError("保存失败!");
                    },
                    error:function(){
                        showError("保存失败!");
                    }
                });
            });

        });


    </script>


</head>
<body>

    <div id="loading" style="display: none;">
        <img alt="数据正在加载中..." src="~/Content/images/loading02.gif" />
    </div>
    <div class="easyui-layout" style="width: 700px; height: 700px;" fit="true">


        <div id="tb" data-options="region:'center',title:'',iconCls:'icon-book'" style="padding: 5px; height: auto">

            <table id="tblAdd" class="view">
                <tr>
                    <th style="width: 20%; text-align: center;">
                        <label for="addIntNo">付费模式：</label>
                    </th>
                    <td style="width: 25%">
                        <select id="ddlPayMode" class="easyui-combobox" style="width: 100px;">
                            <option value="0">预付费</option>
                            <option value="1">后付费</option>
                        </select>
                    </td>
                    <th style="width: 20%; text-align: center;">
                        <label for="addNvcName">结算日：</label>
                    </th>
                    <td style="width: 25%">
                        <input class="easyui-numberbox" value='@ViewBag.BalanceDay' type="text" id="txtBalanceDay" style="width: 100px;" data-options="required:true,validType:'length[1,60]'" />
                        <label>1-28中的任意一天.</label>
                    </td>
                </tr>
                <tr>
                    <th style="width: 20%; text-align: center;">
                        <label for="addIntNo">区域码：</label>
                    </th>
                    <td style="width: 25%">
                        <input class="easyui-numberbox" value='@ViewBag.AreaCode' type="text" id="txtAreaCode" style="width: 100px;" />
                    </td>
                    <th style="width: 20%; text-align: center;"></th>
                    <td style="width: 25%"></td>
                </tr>

                <tr>
                    <td colspan="4" style="text-align: center; padding-top: 10px">
                        <a href="javascript:void(0)" class="easyui-linkbutton" id="btnSave" iconcls="icon-ok">保存</a>
                    </td>
                </tr>
            </table>


        </div>
    </div>

</body>
</html>
