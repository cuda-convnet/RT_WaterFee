    <script type="text/javascript">

        $(function () {
            $(document).keydown(function (event) {
                if (event.keyCode == 13) {
                    $("#btnSearch").click();
                    return;
                }
            });
            var queryData = {

            };//可添加一些预设条件
            InitGrid(queryData);
            BindSearchEvent();
        });
        //实现对DataGird控件的绑定操作
        function InitGrid(queryData) {
            $('#grid').datagrid({   //定位到Table标签，Table标签的ID是grid
                //url: '/Fee/GetAccDebt',   //指向后台的Action来获取当前用户的信息的Json格式的数据
                title: '欠费记录',
                iconCls: 'icon-view',
                height: document.body.clientHeight * 0.9 - 80,
                width: function () { return document.body.clientWidth * 0.9 },//自动宽度
                nowrap: true,
                autoRowHeight: true,
                striped: true,
                collapsible: true,
                pagination: true,
                pageSize: 50,
                pageList: [50, 100, 200],
                rownumbers: true,
                //sortName: 'ID',    //根据某个字段给easyUI排序
                sortOrder: 'asc',
                remoteSort: false,
                //idField: 'ID', //不设置idField，翻页不会记录选择
                queryParams: queryData,  //异步查询的参数
                columns: [[	                
                     //费用编号 费用日期 计算水量 欠费 违约金
                     { title: '费用编号', field: '费用编号', width: 100, sortable: true, align: 'center' },
                     {
                         title: '费用日期', field: '费用日期', width: 100, sortable: true, align: 'center',
                         formatter: function (val, rowObj, index) {
                             return new Date(val.replace("-", "/").replace("T", " ")).Format();
                         }
                     },
                     { title: '计算水量', field: '计算水量', width: 100, sortable: true, align: 'center' },
                     { title: '欠费', field: '欠费', width: 100, sortable: true, align: 'center' },
                     { title: '违约金', field: '违约金', width: 100, sortable: true, align: 'center' }

                ]]
                         
            });           
        };

        var TotalMoney;
        function FeeOK() {
            var validate = $("#ffAdd").form('validate');
            if (validate == false) {
                return false;
            }
            var rows = $("#grid").datagrid("getSelections");
            if (rows.length < 1) {
                $.messager.alert("温馨提示", "请至少选择一条财务记录进行缴费!");
                return;
            }
            var retMoney = parseFloat($("#lblRetMoney").html());
            if (retMoney < 0) {
                $.messager.alert("温馨提示", "本次实收不能小于费用总额!");
                return false;
            }
            $.messager.progress({
                //title: '温馨提示',
                text: '正在处理中,请稍后......'
            });
            setTimeout("$.messager.progress('close')", 3000);
            for (var i = 0; i < rows.length; i++) {
            }
        }

        function countFee(value) {
            if (value != null) {
                var retMoney = value - TotalMoney;
                $("#lblRetMoney").html(retMoney.toFixed(2));
            }
        }
        function InitData() {
            $("#txtCustNo").html("");
            $("#txtName").html("");
            $("#txtArea").html("");
            $("#txtBuilding").html("");
            $("#txtAddress").html("");
            $("#txtMode").html("");
            $("#grid").datagrid('loadData',{ total: 0, rows: [] });
        }
        var gridrow = 0;
        function queryFee() { 
            //清空数据
            InitData()
            isOwn = true; 
            var custNo = $("#txtIntNo").val();         
            if (custNo == "") {
                showError("请输入客户编号!", 1500);
                return;
            }
            $.messager.progress({ text: '正在处理中,请稍后......' })
            $.ajax({
                url: '/Fee/CloseAccount_Query_Server?custNo=' + custNo,
                type: 'post',
                dataType: 'json',
                data: {},
                //async: false,
                success: function (json) {
                    console.log(json);
                    $.messager.progress('close');
                    if (json.Success && json.Data1) {
                        var data = JSON.parse(json.Data1);  
                        var rowcount = JSON.parse(json.Data2); 
                        //console.log(rowcount);
                        //console.log(data);
                        if (data.length > 0) {
                            $("#txtCustNo").html(custNo);
                            $("#txtName").html(data[0].户名);
                            $("#txtArea").html(data[0].小区);
                            $("#txtBuilding").html(data[0].楼栋);
                            $("#txtAddress").html(data[0].地址);
                            $("#txtMode").html(data[0].账务模式);
                        }
                        $("#grid").datagrid("loadData", json.Obj1);     
                        gridrow = rowcount;
                    }
                    else {
                        $.messager.alert("温馨提示", json.ErrorMessage);
                    }
                },
                error: function () {
                    showError("网络错误!");
                    $.messager.progress('close');
                }
            });
        }

        //绑定搜索按钮的的点击事件
        function BindSearchEvent() {
            //按条件进行查询数据，首先我们得到数据的值
            $("#btnSearch").click(function () {
                queryFee();                     
                return false;
            });

            $("#btnClose").click(closeAccount);
            $.extend($.fn.validatebox.defaults.rules, {
                //校验正整数，并计算码洋
                oninputMY: {
                    validator: function (value) {
                        var reg = /^[0-9]+([.]{1}[0-9]+){0,1}$/;
                        if (reg.test(value)) {
                            countFee(value);
                            return true;
                        }
                        return false;
                    },
                    message: '请输入正确数字'
                }
            });
        }
        function closeAccount() {          
            var custNo = $("#txtCustNo").html();
            if (custNo == "") {
                showError("请先查询客户欠费信息!", 1500);
                return;
            }
            if (gridrow>0) {
                $.messager.alert("温馨提示", "当前客户有欠款,请先把欠款结清再进行销户操作!");
                return false;
            }
            $.messager.confirm("销户确认", "是否确定对客户编号【" + custNo + "】的用户进行销户操作?", function (isAction) {
                if (isAction) {
                    $.messager.progress({ text: '正在处理中,请稍后......' });
                    $.ajax({
                        url: '/Fee/CloseAccount_Close_Server?custNo=' + custNo,
                        type: 'post',
                        dataType: 'json',
                        data: {},
                        //async: false,
                        success: function (json) {
                            $.messager.progress('close');
                            if (json.Success) {
                                showTips("销户成功!");
                            }
                            else {
                                $.messager.alert("温馨提示", json.ErrorMessage);
                            }
                        },
                        error: function () {
                            showError("网络错误!");
                            $.messager.progress('close');
                        }
                    });
                }
            });                  
        }
    </script>
</head>
