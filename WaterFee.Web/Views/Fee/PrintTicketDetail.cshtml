<!DOCTYPE html>
<html>
<head>
    <title>打印票据</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    @using System.Web.Optimization;
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquerytools")
    @Styles.Render("~/Content/jquerytools")

    <!--常用的一些组件业务脚本函数,放置此处方便脚本提示-->
    <script src="~/Scripts/ComponentUtil.js"></script>
    <script src="~/Scripts/dbjs.js"></script>

    <script type="text/javascript">

        $(function () {

        });

        function printNow() {
            var newWindow = window.open("打印窗口", "_blank");
            var docStr = $("#divPrintArea").html();
            newWindow.document.write(docStr);
            newWindow.document.close();
            newWindow.print();
            newWindow.close();
        }
    </script>
    <style type="text/css">
        .tablePrint th {
            width: 60px;
            min-width: 60px;
        }
    </style>
</head>
<body>

    <div id="tb" data-options="region:'center',title:'',iconCls:'icon-book'" style="padding: 5px; height: auto">

        <fieldset style="width: 600px">
            <legend>打印信息</legend>
            <div id="divPrintArea" class="tablePrint">
                <table class="tablePrint" cellspacing="0" cellpadding="0" style="margin: 10px; width: 99%;font-size:12px;">
                    <tr>
                        <th style='padding: 5px;width:60px;'>客户编号：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.IntCustNo" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>客户姓名：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.NvcName" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>门牌号：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.VcRoomNum" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>
                    </tr>
                    <tr>
                        <th style='padding: 5px;'>小区名称：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.NvcVillage" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>客户地址：</th>
                        <td style='padding: 5px;' colspan="3">
                            <input type="text" value="@ViewBag.NvcAddr" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>
                    </tr>
                    <tr>
                        <th style='padding: 5px;'>费用年月：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.IntYearMon" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>费用日期：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.DteFee" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>销账日期：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.DtePay" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>
                    </tr>
                    <tr>
                        <th style='padding: 5px;'>费用金额：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="¥@ViewBag.MonFee" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>违约金：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="¥@ViewBag.MonPenalty" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>违约天数：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.IntDays" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>
                    </tr>
                    <tr>
                        <th style='padding: 5px;'>流水号：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.VcFlowNo"  class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>销账单位：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.IntPayUnit" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>

                        <th style='padding: 5px;'>操作员：</th>
                        <td style='padding: 5px;'>
                            <input type="text" value="@ViewBag.VcChargeNo" class="text-info" style="width: 99%; border: none; border-bottom: 1px solid #808080;" readonly /></td>
                    </tr>
                </table>
            </div>
        </fieldset>

        <div id="divBtn" style="margin: 20px; text-align: center; width: 600px">
            <a onclick="printNow()" href="javascript:void(0)" class="l-btn l-btn-small l-btn-plain" id="btnFee"><span class="l-btn-left l-btn-icon-left"><span class="l-btn-text">打印票据</span><span class="l-btn-icon icon-print">&nbsp;</span></span></a>
        </div>
    </div>


</body>
</html>
